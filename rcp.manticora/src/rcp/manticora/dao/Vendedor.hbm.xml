<?xml version="1.0"?>
	<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="rcp.manticora.model.Vendedor" table="VENDEDORES">
		<id name="idVendedor" column="idVENDEDOR" unsaved-value="-1">
			<generator class="native"/>
		</id>
		<property name="nombre"/>
		<property name="apellido"/>
		<property name="estado"/>
		<property name="dspEstado"
			formula="(select k.descripcion from keywords k
				where k.codigo = estado and k.tipo = 'Status general')"/>
	</class>
</hibernate-mapping>